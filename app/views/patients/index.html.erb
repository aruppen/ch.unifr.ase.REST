<%- model_class = Patient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table>
  <thead>
  <tr>
    <th>Id</th>
    <th>FirstName</th>
    <th>LastName</th>
    <th>Gender At</th>
    <th></th>
    <th></th>
  </tr>


  </thead>
  <tbody>
  <% @patients.each do |patient| %>
      <tr>
        <td><%= link_to(patient.pid, {:action => 'show', :id => patient.pid})%></td>
        <td><%= patient.firstName %></td>
        <td><%= patient.lastName %></td>
        <td><%= patient.gender %></td>
        <td><%=link_to('Edit', edit_patient_path(patient.pid)) %></td>
        <td><%= link_to("Delete article", { :action => "destroy", :id => patient.pid },
                        :confirm => "Are you sure you want to delete this article?",
                        :method => :delete) %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Patient', new_patient_path %>
