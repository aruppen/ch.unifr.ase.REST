<h1>Login</h1>
<%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :username %>
      <%= text_field_tag :username, params[:username] %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :passwd %>
    </div>
    <div class="actions"><%= submit_tag "Log in", :class => "btn btn-info"%></div>
<% end %>